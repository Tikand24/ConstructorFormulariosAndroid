<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.constructor.sidisas.constructor.TableroActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageTableroFichaHogar"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="top|center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:contentDescription="Descruocuib"
                app:srcCompat="@drawable/family"
                tools:srcCompat="@drawable/family" />

            <TextView
                android:id="@+id/textTableroFichaHogar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="15dp"
                android:background="#1a237e"
                android:gravity="top|start"
                android:padding="10dp"
                android:text="Ficha hogar"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/imageTableroPendientes"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="top|center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:contentDescription="Descruocuib"
                app:srcCompat="@drawable/pendientes"
                tools:srcCompat="@drawable/pendientes" />

            <TextView
                android:id="@+id/textTableroPendientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorBlue"
                android:gravity="top|start"
                android:padding="10dp"
                android:text="Pendientes"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageTableroParametros"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_gravity="top|center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:contentDescription="Descruocuib"
                app:srcCompat="@drawable/parametros"
                tools:srcCompat="@drawable/parametros" />

            <TextView
                android:id="@+id/textTableroParametros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:background="#263238"
                android:gravity="top|start"
                android:padding="10dp"
                android:text="Parametros"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonGoTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEST" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>